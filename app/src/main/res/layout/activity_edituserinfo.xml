<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context=".activity.EditUserInfoActivity">

    <EditText
        android:drawableLeft="@android:drawable/ic_menu_myplaces"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="请输入您的昵称"
        android:id="@+id/edit_name"
        android:layout_alignParentTop="true"
        android:text=""
        android:layout_alignLeft="@+id/edit_desc"
        android:layout_alignStart="@+id/edit_desc"
        android:layout_alignRight="@+id/edit_desc"
        android:layout_alignEnd="@+id/edit_desc" />



    <EditText
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:layout_width="fill_parent"
        android:layout_height="60dp"

        android:ems="10"
        android:id="@+id/edit_sex"
        android:hint="请输入您的性别"
        android:layout_below="@+id/edit_name"
        android:layout_alignRight="@+id/edit_name"
        android:layout_alignEnd="@+id/edit_name"
        android:layout_alignLeft="@+id/edit_name"
        android:layout_alignStart="@+id/edit_name" />

    <EditText
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:ems="10"
        android:id="@+id/edit_desc"
        android:layout_below="@+id/edit_sex"
        android:layout_centerHorizontal="true"
        android:hint="请输入你的签名"
        />





    <Button
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="确定"
    android:id="@+id/resetpwd_btn_sure"
    android:textSize="20dp"

    android:background="#1cf718"
    android:layout_marginTop="170dp"
    android:layout_below="@+id/edit_desc"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />




    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="取消"
        android:id="@+id/resetpwd_btn_cancel"
        android:textSize="20dp"
        android:onClick="@+id/cancel"
        android:background="#f71818"
        android:layout_below="@+id/resetpwd_btn_sure"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />




</RelativeLayout>